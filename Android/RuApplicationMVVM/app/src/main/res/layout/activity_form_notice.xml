<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/form_notice_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FormNoticeActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_medium"
            android:orientation="vertical">

            <EditText
                android:id="@+id/form_notice_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_assunto" />

            <Spinner
                android:id="@+id/form_notice_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp" />

            <View
                android:id="@+id/detail_notice_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/form_notice_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:hint="@string/hint_content" />
        </LinearLayout>
    </RelativeLayout>
</layout>