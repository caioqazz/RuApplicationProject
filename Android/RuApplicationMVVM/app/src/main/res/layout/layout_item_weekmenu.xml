<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_week_menu_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/layout_item_week_menu_weeknum"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_drawable"
        android:gravity="center"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/layout_item_week_menu_weeknum"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/layout_item_week_menu_name"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:maxLines="2"
                />

            <TextView
                android:id="@+id/layout_item_week_menu_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/layout_item_week_menu_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                 />
        </RelativeLayout>

        <TextView
            android:id="@+id/layout_item_week_menu_days"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            />

    </LinearLayout>

</RelativeLayout>