<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usuario.ruapplicationpassivemvc">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="br.ufop.ruapplicationpassivemvc.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/restaurant"
        android:label="@string/app_name"
        android:roundIcon="@drawable/restaurant"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.ReportDishesActivity"></activity>
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.ReportDemandAcitvity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.FormFeedbackActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.MenuFormActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.FormCalendarActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.DemandActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.MenuActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.DayMealActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.DetailFeedbackActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.DishActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.DetailDishActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.ProfileActivity" />
        <activity
            android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.MainClientActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.RegisterActivity" />
        <activity
            android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.MainManagerActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.FormNoticeActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.DetailNoticeActivity" />
        <activity android:name="br.ufop.ruapplicationpassivemvc.activity.implementation.FormDishActivity" />
    </application>

</manifest>