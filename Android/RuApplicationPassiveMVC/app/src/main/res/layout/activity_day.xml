<?xml version="1.0" encoding="utf-8"?>
<br.ufop.ruapplicationpassivemvc.view.DayView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufop.ruapplicationpassivemvc.activity.implementation.DayMealActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/day_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/day_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clipToPadding="false"
            android:paddingBottom="100dp"
            android:scrollbars="vertical" />

    </android.support.v4.widget.SwipeRefreshLayout>

</br.ufop.ruapplicationpassivemvc.view.DayView>